  return Scaffold(
    appBar: AppBar(
      title: Text('History Quiz'),
      backgroundColor: Colors.orange,
    ),
    backgroundColor: Colors.grey[200],
    body: Padding(
      padding: const EdgeInsets.all(20.0),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.stretch,
        children: [
          Text(
